Install-Module -Name Az -AllowClobber

#Login into the azure portal
Login-AzAccount
# Create a new resource group.

 $resourceGroup = "kumar"
 $location = "south india"

New-AzResourceGroup -Name $resourceGroup -Location $location

# Set the name of the storage account and the SKU name.
$storageAccountName = "kumarstorageaccount"
$skuName = "Standard_LRS"

# Create the storage account.
$storageAccount = New-AzStorageAccount -ResourceGroupName $resourceGroup -Name $storageAccountName -Location $location -SkuName $skuName

# Retrieve the context.
$ctx = $storageAccount.Context

$storagecontainer = New-AzStorageContainer -Name kumarcontainer -Permission Container -Context $ctx


